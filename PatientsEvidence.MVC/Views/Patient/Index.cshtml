@model PatientsEvidence.MVC.Models.Patient.PatientsListViewModel

<div class="text-center">
    <h1>Patients</h1>

    <table id="patientsTable" class="table table-striped table-bordered" style="width:100%; display: none;">
        <thead>
            <tr>
                <th class="filterable">Name</th>
                <th class="filterable">Surname</th>
                <th>Height</th>
                <th>Weight</th>
                <th class="filterable">Birt date</th>
                <th class="filterable">Age</th>
            </tr>
        </thead>
        <tbody>
            @{
                var index = 1;
                foreach (var patient in Model?.Patients)
                {
                    <tr>
                        <td><a asp-controller="Patient" asp-action="Detail" asp-route-id="@index">@patient.DbPatient.Name</a></td>
                        <td><a asp-controller="Patient" asp-action="Detail" asp-route-id="@index">@patient.DbPatient.Surname</a></td>
                        <td>@patient.DbPatient.Height</td>
                        <td>@patient.DbPatient.Weight</td>
                        <td>@patient.DbPatient.DateOfBirth.ToString("dd.MM.yyyy")</td>
                        <td>@patient.DbPatient.Age</td>
                    </tr>
                    index++;
                }
            }
        </tbody>
    </table>
</div>
