@model PatientsEvidence.MVC.Models.Patient.PatientsListViewModel

<div class="text-center">
    <h1>Patients</h1>

    <table id="patientsTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th class="filterable">Name</th>
                <th class="filterable">Surname</th>
                <th class="filterable">Height</th>
                <th>Weight</th>
                <th class="filterable">Birt date</th>
                <th class="filterable">Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model?.Patients)
            {
                <tr>
                    <td><a asp-controller="Home" asp-action="Privacy">@patient.Name</a></td>
                    <td><a asp-controller="Home" asp-action="Privacy">@patient.Surname</a></td>
                    <td>@patient.Height</td>
                    <td>@patient.Weight</td>
                    <td>@patient.DateOfBirth</td>
                    <td>@patient.Age</td>
                </tr>
            }
        </tbody>
    </table>
</div>
